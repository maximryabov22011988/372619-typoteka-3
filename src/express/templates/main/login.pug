extends ../layout.pug

block content
  main
    h1.visually-hidden Форма входа для пользователя
    section
      .popup.popup--registration.popup--anti
        a.popup__button.button.button--popup-close(aria-label='Закрыть окно')
          | Закрыть
          | окно
        h2.popup__title Войти
        .popup__form.form.form--log-in
          form(action='/login' method='post')
            input(type="hidden" name="_csrf" value=csrfToken)
            .form__field
              label
                input(type='email' name='email' placeholder='Электронная почта' required='' value=userData.email)
            .form__field
              label
                input(type='password' name='password' placeholder='Пароль' required='')
            if validationMessages
              .form__validation-error
                p.form__error-message Некоторая ошибка произошла, беда!
                +insertErrorMessages(validationMessages)
            button.form__submit-btn.form__submit-btn--log-in.button.button--colored(type='submit') Войти
